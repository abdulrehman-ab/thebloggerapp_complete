

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<h3 class="comment"> <%= @article.comments.count %> Comments </h3>
<%= render @article.comments %>

<h3> Add a Comment:  </h3>
<%= render 'comments/form' %>


<div class="mid-login">
  <% if (@article.user == current_user) %>
    <button id="session"><%= link_to 'Edit', edit_article_path(@article) %></button>
   <% end %>
  <button id="session"><%= link_to 'Back', articles_path %></button>
</div>



